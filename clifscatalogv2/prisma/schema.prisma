generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  name      String?
  password  String
  favorites Favorites[]
}

model Favorites {
  id     Int    @id @default(autoincrement())
  title  String
  image  String
  mealId Int
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}
